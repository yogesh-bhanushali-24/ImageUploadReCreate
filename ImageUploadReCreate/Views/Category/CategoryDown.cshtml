@model ImageUploadReCreate.Models.Stdcategory

@{
    ViewData["Title"] = "CategoryDown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CategoryDown</h1>

<h4>Stdcategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CategoryDown">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cname" class="control-label"></label>
               
                @Html.DropDownListFor(x => x.Cid, new SelectList(ViewBag.list, "Cid", "Cname"), "Select Category", htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

